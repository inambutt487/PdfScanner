<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     android:paddingTop="35dp"
    android:paddingBottom="8dp"
    tools:context=".views.activities.SettingActivity">


    <ImageView
        android:id="@+id/setting_back_btn"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_back_arrow_black"
        android:scaleType="centerInside"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/settings"
        android:textColor="#2E3137"
        android:textSize="26dp"
        android:layout_marginStart="18dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_back_btn"
        app:layout_constraintStart_toEndOf="@id/setting_back_btn"
        app:layout_constraintTop_toTopOf="@+id/setting_back_btn" />

    <ImageView
        android:id="@+id/setting_exit_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_exit_ic"
        app:layout_constraintBottom_toBottomOf="@+id/setting_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:background="@drawable/edittext_white_bg"
        android:elevation="2dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toBottomOf="@+id/setting_back_btn"
        app:layout_constraintBottom_toTopOf="@+id/rootLayout2">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/premium_s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setting_itemtv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Upgrade to Premium"
            android:textColor="#ff9100"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/setting_icon"
            app:layout_constraintEnd_toStartOf="@id/setting_goto"
            app:layout_constraintStart_toEndOf="@id/setting_icon"
            app:layout_constraintTop_toTopOf="@id/setting_icon" />

        <ImageView
            android:id="@+id/setting_goto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_arrow_y"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/edittext_white_bg"
        android:elevation="2dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/rootLayout1"
        app:layout_constraintBottom_toTopOf="@+id/rootLayout3">

        <ImageView
            android:id="@+id/translate_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/main_translate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/translate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_medium"
            android:text="PDF Translator"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/translate_icon"
            app:layout_constraintBottom_toBottomOf="@+id/translate_icon"
            app:layout_constraintStart_toEndOf="@+id/translate_icon" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/new_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/translate_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_arrow_r"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        android:background="@drawable/edittext_white_bg"
        android:elevation="2dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toBottomOf="@+id/rootLayout2"
        android:layout_marginTop="@dimen/_10ssp">

        <ImageView
            android:id="@+id/cast_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/main_cast_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/cast_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Cast PDF"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/cast_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cast_icon"
            app:layout_constraintStart_toEndOf="@+id/cast_icon" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/new_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cast_text" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_arrow_r"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#757E93AB"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_marginRight="@dimen/_10ssp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@id/rootLayout3"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="35dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toTopOf="@id/adlayout"
        android:id="@+id/recyclerView_setting"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_4sdp"
        android:background="@drawable/ad_bg">

        <com.facebook.ads.NativeAdLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />

        <FrameLayout
            android:id="@+id/admobNativeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />

        <include
            android:id="@+id/adlayout2"
            layout="@layout/ad_loading2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>