<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noFileLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_doc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nodocument_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/roboto_medium"
            android:src="@drawable/ic_no_doc_img"
            android:text="No Scan PDF Document Found"
            android:textAlignment="center"
            android:textColor="#7E93AB"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:src="@drawable/ic_no_doc_img"
            android:text="Start new scan from camera or import from gallery."
            android:textAlignment="center"
            android:textColor="#7E93AB"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_nodocument_found"
            app:layout_constraintStart_toStartOf="@id/tv_nodocument_found"
            app:layout_constraintTop_toBottomOf="@id/tv_nodocument_found" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>